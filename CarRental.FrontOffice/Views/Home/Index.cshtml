@{
    ViewData["Title"] = "Home";
}

<style>
    .hero-section {
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 40px 20px;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 700;
        color: white;
        text-shadow: 2px 4px 20px rgba(0, 0, 0, 0.5);
        margin-bottom: 1rem;
        animation: fadeInUp 1s ease-out;
    }

    .hero-tagline {
        font-size: 1.8rem;
        font-weight: 300;
        color: rgba(255, 255, 255, 0.95);
        text-shadow: 1px 2px 10px rgba(0, 0, 0, 0.4);
        margin-bottom: 2rem;
        animation: fadeInUp 1.2s ease-out;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        max-width: 600px;
        margin-bottom: 2.5rem;
        animation: fadeInUp 1.4s ease-out;
    }

    .hero-cta {
        animation: fadeInUp 1.6s ease-out;
    }

    .btn-hero {
        padding: 16px 40px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-hero:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.7);
        color: white;
    }

    /* Floating animation for accent elements */
    .floating {
        animation: floating 3s ease-in-out infinite;
    }

    .floating-delayed {
        animation: floating 3s ease-in-out infinite;
        animation-delay: 1.5s;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes floating {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    /* Decorative elements */
    .hero-decoration {
        position: absolute;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.3), rgba(118, 75, 162, 0.3));
        filter: blur(40px);
        z-index: -1;
    }

    .deco-1 {
        top: 20%;
        left: 10%;
        animation: floating 4s ease-in-out infinite;
    }

    .deco-2 {
        bottom: 20%;
        right: 10%;
        animation: floating 5s ease-in-out infinite;
        animation-delay: 2s;
    }

    /* Stats section */
    .stats-section {
        display: flex;
        justify-content: center;
        gap: 60px;
        margin-top: 60px;
        flex-wrap: wrap;
        animation: fadeInUp 1.8s ease-out;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        .hero-tagline {
            font-size: 1.3rem;
        }
        .stats-section {
            gap: 30px;
        }
        .stat-number {
            font-size: 2rem;
        }
    }
</style>

<div class="hero-section position-relative">
    <div class="hero-decoration deco-1"></div>
    <div class="hero-decoration deco-2"></div>
    
    <h1 class="hero-title floating">
        <i class="bi bi-car-front-fill me-3"></i>CarRental
    </h1>
    
    <p class="hero-tagline floating-delayed">
        Your journey starts with the right car.
    </p>
    
    <p class="hero-subtitle">
        Discover our premium fleet of vehicles for every adventure. 
        From city drives to cross-country trips, we've got you covered.
    </p>
    
    <div class="hero-cta">
        <a href="/Vehicle" class="btn-hero">
            <i class="bi bi-search me-2"></i>Browse Vehicles
        </a>
    </div>

    <div class="stats-section">
        <div class="stat-item">
            <div class="stat-number">50+</div>
            <div class="stat-label">Vehicles</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">1000+</div>
            <div class="stat-label">Happy Clients</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Support</div>
        </div>
    </div>
</div>
