@model CarRental.FrontOffice.Models.CreateRentalViewModel
@{
    ViewData["Title"] = "Book a Vehicle";
    var vehicles = ViewBag.Vehicles as IEnumerable<CarRental.Core.Entities.Vehicle>;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-calendar-check"></i> Book a Vehicle</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.VehicleName))
                    {
                        <div class="alert alert-info">
                            <strong>Selected Vehicle:</strong> @Model.VehicleName
                            @if (Model.DailyPrice.HasValue)
                            {
                                <span class="badge bg-success ms-2">@Model.DailyPrice.Value.ToString("C")/day</span>
                            }
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="VehicleId" class="form-label">Select Vehicle</label>
                            <select asp-for="VehicleId" class="form-select" required>
                                <option value="">-- Select a Vehicle --</option>
                                @if (vehicles != null)
                                {
                                    @foreach (var v in vehicles)
                                    {
                                        <option value="@v.Id" selected="@(v.Id == Model.VehicleId)">
                                            @v.Brand @v.Model (@v.LicensePlate) - @v.DailyPrice.ToString("C")/day
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="VehicleId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label">Start Date</label>
                                <input asp-for="StartDate" type="date" class="form-control" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control" min="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Submit Booking Request
                            </button>
                            <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Vehicles
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
