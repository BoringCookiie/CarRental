<Window x:Class="CarRental.BackOffice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CarRental.BackOffice.ViewModels"
        mc:Ignorable="d"
        Title="CarRental Admin Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}">
    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center">
            <TextBlock Text="Car Rental Admin" 
                       FontSize="28" FontWeight="Medium"
                       HorizontalAlignment="Center" Margin="0,0,0,30"
                       Foreground="#673AB7"/>
            
            <TextBlock Text="Email" FontSize="12" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Email}" 
                     Padding="10" FontSize="14"
                     BorderBrush="#673AB7" BorderThickness="1"/>
                     
            <TextBlock Text="Password" FontSize="12" Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Padding="10" FontSize="14"
                         BorderBrush="#673AB7" BorderThickness="1"/>
            
            <Button Command="{Binding LoginCommand}" 
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Content="LOGIN" 
                    Background="#673AB7" Foreground="White"
                    FontSize="16" FontWeight="Bold"
                    Margin="0,25" 
                    Height="50"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
