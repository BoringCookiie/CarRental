<UserControl x:Class="CarRental.BackOffice.Views.VehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:CarRental.BackOffice.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:VehicleViewModel}">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Vehicle List -->
        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="Vehicles" FontSize="24" FontWeight="Medium"/>
                <Button Command="{Binding LoadVehiclesCommand}" 
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh"
                        Margin="16,0,0,0">
                    <materialDesign:PackIcon Kind="Refresh"/>
                </Button>
            </StackPanel>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Vehicles}" 
                      SelectedItem="{Binding SelectedVehicle}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Style="{StaticResource MaterialDesignDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="*"/>
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="License Plate" Binding="{Binding LicensePlate}" Width="100"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="60"/>
                    <DataGridTextColumn Header="Daily Price" Binding="{Binding DailyPrice, StringFormat={}{0:F2} MAD}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Grid.Row="2" 
                    Content="Export to CSV" 
                    Command="{Binding ExportCsvCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    HorizontalAlignment="Left"
                    Margin="0,16,0,0">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExport" Margin="0,0,8,0"/>
                            <TextBlock Text="Export to CSV"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

        <!-- Form Panel -->
        <materialDesign:Card Grid.Column="1" Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Margin="0,0,0,16">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Add New Vehicle"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter Property="Text" Value="Edit Vehicle"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBox materialDesign:HintAssist.Hint="Brand *"
                             Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox materialDesign:HintAssist.Hint="Model *"
                             Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox materialDesign:HintAssist.Hint="License Plate *"
                             Text="{Binding LicensePlate, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox materialDesign:HintAssist.Hint="Year"
                             Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox materialDesign:HintAssist.Hint="Color"
                             Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <TextBox materialDesign:HintAssist.Hint="Daily Price *"
                             Text="{Binding DailyPrice, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,12"/>

                    <ComboBox materialDesign:HintAssist.Hint="Vehicle Type *"
                              ItemsSource="{Binding VehicleTypes}"
                              SelectedItem="{Binding SelectedVehicleType}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,12"/>

                    <ComboBox materialDesign:HintAssist.Hint="Status"
                              ItemsSource="{Binding VehicleStatuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,12"/>

                    <!-- Image Upload Section -->
                    <TextBlock Text="Vehicle Image" FontWeight="Medium" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding ImagePath, Mode=TwoWay}"
                                 IsReadOnly="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Select an image..."
                                 Grid.Column="0"/>
                        <Button Command="{Binding BrowseImageCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="Browse"
                                Grid.Column="1"
                                Margin="8,0,0,0"/>
                    </Grid>
                    
                    <!-- Image Preview -->
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,24" 
                            Visibility="{Binding ImagePath, Converter={StaticResource NullToBoolConverter}}"
                            MaxHeight="150">
                        <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Clear" 
                                Command="{Binding ClearFormCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,8,0"/>

                        <Button Content="Add" 
                                Command="{Binding AddVehicleCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisConverter}}"
                                Margin="0,0,8,0"/>

                        <Button Content="Update" 
                                Command="{Binding UpdateVehicleCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,0,8,0"/>

                        <Button Content="Delete" 
                                Command="{Binding DeleteVehicleCommand}"
                                Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
