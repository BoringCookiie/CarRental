<Window x:Class="CarRental.BackOffice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:CarRental.BackOffice.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#673AB7">
            <StackPanel Margin="10">
                <TextBlock Text="Car Rental Admin" 
                           Foreground="White" 
                           FontSize="24" FontWeight="Medium"
                           Margin="10,20"/>
                
                <Button Command="{Binding NavigateToDashboardCommand}" Content="ðŸ“Š Dashboard" 
                        Foreground="White" Background="Transparent" BorderThickness="0"
                        HorizontalContentAlignment="Left" Padding="10,8"
                        FontSize="14" Cursor="Hand" Margin="0,5"/>
                        
                <Button Command="{Binding NavigateToVehiclesCommand}" Content="ðŸš— Vehicles" 
                        Foreground="White" Background="Transparent" BorderThickness="0"
                        HorizontalContentAlignment="Left" Padding="10,8"
                        FontSize="14" Cursor="Hand" Margin="0,5"/>

                <Button Command="{Binding NavigateToRentalsCommand}" Content="ðŸ“‹ Rentals" 
                        Foreground="White" Background="Transparent" BorderThickness="0"
                        HorizontalContentAlignment="Left" Padding="10,8"
                        FontSize="14" Cursor="Hand" Margin="0,5"/>

                <Button Command="{Binding NavigateToClientsCommand}" Content="ðŸ‘¥ Clients" 
                        Foreground="White" Background="Transparent" BorderThickness="0"
                        HorizontalContentAlignment="Left" Padding="10,8"
                        FontSize="14" Cursor="Hand" Margin="0,5"/>

                <Separator Background="White" Opacity="0.5" Margin="0,20"/>
                
                <Button Command="{Binding LogoutCommand}" 
                        Content="Logout" 
                        Foreground="White" Background="Transparent"
                        BorderBrush="White" BorderThickness="1"
                        Padding="10,8" Cursor="Hand"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="20" Background="White"/>
    </Grid>
</Window>
