<UserControl x:Class="CarRental.BackOffice.Views.RentalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:CarRental.BackOffice.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:RentalViewModel}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="Rentals" FontSize="24" FontWeight="Medium"/>
            <Button Command="{Binding LoadRentalsCommand}" 
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Refresh"
                    Margin="16,0,0,0">
                <materialDesign:PackIcon Kind="Refresh"/>
            </Button>
        </StackPanel>

        <!-- Rentals DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Rentals}" 
                  SelectedItem="{Binding SelectedRental}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Client" Binding="{Binding Client.FirstName}" Width="100"/>
                <DataGridTextColumn Header="Vehicle" Width="150">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="Vehicle.Brand"/>
                            <Binding Path="Vehicle.Model"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat={}{0:F2} MAD}" Width="100"/>
                <DataGridTemplateColumn Header="Status" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <materialDesign:Chip Content="{Binding Status}" 
                                                 IconBackground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                                 Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=g}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Actions Panel -->
        <materialDesign:Card Grid.Row="2" Margin="0,16,0,0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Selected Rental: " FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedRental.Id, FallbackValue='None selected'}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Text=" | Status: " FontSize="14" VerticalAlignment="Center" Margin="16,0,0,0"/>
                    <ComboBox ItemsSource="{Binding RentalStatuses}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Width="120"
                              Margin="8,0,0,0"
                              IsEnabled="{Binding SelectedRental, Converter={StaticResource NullToBoolConverter}}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="Confirm" 
                            Command="{Binding ConfirmRentalCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="Green"
                            Margin="0,0,8,0"/>
                    <Button Content="Complete" 
                            Command="{Binding CompleteRentalCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="Blue"
                            Margin="0,0,8,0"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelRentalCommand}"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
