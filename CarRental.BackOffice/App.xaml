<Application x:Class="CarRental.BackOffice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:CarRental.BackOffice"
             xmlns:vm="clr-namespace:CarRental.BackOffice.ViewModels"
             xmlns:views="clr-namespace:CarRental.BackOffice.Views"
             xmlns:converters="clr-namespace:CarRental.BackOffice.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design: BundledTheme (recommended for v5.x) -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <!-- Material Design: Control Styles -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
            <converters:NotNullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:StatusColorConverter x:Key="StatusColorConverter"/>

            <!-- DataTemplates for View Navigation -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:VehicleViewModel}">
                <views:VehicleView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ClientViewModel}">
                <views:ClientView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:RentalViewModel}">
                <views:RentalView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
